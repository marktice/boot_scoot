<header>
  <nav role="navigation">
    <%= render 'layouts/hamburger' %>
    <div id="nav-logo"><%= link_to 'Boot Scoot', root_path %></div>
    <% if user_signed_in? %>
      <div class="nav-links">
        <% unless current_user.driver_profile.nil? %>
          <%= link_to 'Drive', bookings_path, id: 'drive-link' %>
        <% end %>
      </div>
      <%= link_to profile_path do %>
        <%= image_tag display_avatar(current_user, :thumb), id: "nav-avatar" %>
      <% end %>
    <% else %>
      <%# link_to 'Sign up', new_user_registration_path %>
      <%# link_to 'Log in', new_user_session_path %>
    <% end %>
  </nav>
</header>