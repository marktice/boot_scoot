<header>
  <nav>
    <ul>
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Contact', contact_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "#{ current_user.email }", profile_path %></li>

        <% if current_user.car == nil %>
          <li><%= link_to 'Add your car!', car_edit_path %></li>
        <% else %>
          <li><%= link_to 'Your Car', car_path %></li>
        <% end %>

        <% if current_user.driver_profile == nil %>
          <li><%= link_to 'Become a driver!', driver_edit_path %></li>
        <% else %>
          <li><%= link_to 'Driver Profile', driver_path %></li>
        <% end %>

        <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <li><%= link_to 'Log in', new_user_session_path %></li>  
      <% end %>
    </ul>
  </nav>
</header>