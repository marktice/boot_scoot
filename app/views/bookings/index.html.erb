<h1>Available Bookings</h1>

<div id="map"></div>

<% @bookings.each do |booking| %>
  <div>
    Passenger: <%= booking.passenger.profile.first_name %><br />
    Pickup: <%= booking.origin_address %><br />
    Created_at: <%= time_ago_in_words(booking.created_at) %><br />
    <%= link_to 'Boot Scoot!', booking_path(booking), method: :patch %><br />
  </div>
  <hr>
<% end %>

<%= javascript_tag do %>

  var map, infoWindow;
  function initMap() {

    // pass in locations
    const locations = <%= raw @locations.to_json %>
    locations.forEach((local) => {
        local.lng = parseFloat(local.lng)
        local.lat = parseFloat(local.lat)
    })

    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: -37.8182119, lng: 144.9543325},
      zoom: 13,
      styles: <%= render 'map_style' %>
    });

    // markers for each location
    locations.map((location, i) => {
      return new google.maps.Marker({
        position: location,
        label: location.name,
        map: map
      });
    });

    infoWindow = new google.maps.InfoWindow;

    // Try HTML5 geolocation.
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        var pos = {
          lat: position.coords.latitude,
          lng: position.coords.longitude
        };

        infoWindow.setPosition(pos);
        infoWindow.setContent('Location found.');
        infoWindow.open(map);
        map.setCenter(pos);
        map.setZoom(15);
      }, function() {
        handleLocationError(true, infoWindow, map.getCenter());
      });
    } else {
      // Browser doesn't support Geolocation
      handleLocationError(false, infoWindow, map.getCenter());
    }
  console.table(locations)
  }


  function handleLocationError(browserHasGeolocation, infoWindow, pos) {
    infoWindow.setPosition(pos);
    infoWindow.setContent(browserHasGeolocation ?
                          'Error: The Geolocation service failed.' :
                          'Error: Your browser doesn\'t support geolocation.');
    infoWindow.open(map);
  }
<% end %>

<script async defer
src="https://maps.googleapis.com/maps/api/js?key=<%= ENV.fetch('GOOGLE_MAPS_API') %>&callback=initMap">
</script>