<h1>Your trips as passenger</h1>

<% @bookings.each do |booking| %>
  <% unless booking.driver == nil %>    
    <%= time_ago_in_words(booking.completed_at) %> ago<br />
    Cost: $<%= sprintf("%0.2f", booking.cost) %><br />
    Origin: <%= booking.origin_address %><br /> 
    Destination: <%= booking.destination_address %><br />
    Driver: <%= booking.driver.profile.first_name %><br />  
    <%= link_to 'Show', booking_path(booking) %><br />
  <% end %>
  <br />
<% end %>